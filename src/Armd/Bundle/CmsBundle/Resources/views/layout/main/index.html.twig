{% extends 'ArmdCmsBundle::layout.html.twig' %}

{% block title %} {{ manager.getCurrentPage().getTitle()}}/ {{ parent() }}{% endblock %}

{% block layout_content %}
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ basePath() }}">Тестовый сайт</a>
          <div class="nav-collapse">
            {{ getContainerContent('menu') }}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    {{ getContainerContent('header') }}<br>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span9">
            {{ getContainerContent('content') }}
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Копирайт 2012</p>
      </footer>

    </div><!--/.fluid-container-->
    {{ getContainerContent('footer') }}
{% endblock %}