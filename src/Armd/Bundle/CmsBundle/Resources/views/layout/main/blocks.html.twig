    {{ common.block(content_top, {'class': 'block-half'}) }}
    {{ common.block(menu, {'class': 'block-half'}) }}

    {{ common.block(content, {'class': 'block-full'}) }}
    {{ common.block(content_footer, {'class': 'block-full'}) }}
</div>