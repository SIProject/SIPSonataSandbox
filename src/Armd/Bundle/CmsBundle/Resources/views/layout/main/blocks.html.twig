{% set content_top %}
    {{ table.create({'title': 'header', 'colspan': 3}, containers, id) }}
{% endset %}

{# menu #}
{% set menu %}
    {{ table.create({'title': 'menu', 'colspan': 3}, containers, id) }}
{% endset %}

{# content #}
{% set content %}
    {{ table.create({'title': 'content', 'colspan': 3}, containers, id) }}
{% endset %}

{# content_footer #}
{% set content_footer %}
    {{ table.create({'title': 'footer', 'colspan': 3}, containers, id) }}
{% endset %}

