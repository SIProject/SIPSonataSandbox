    <link rel="stylesheet" href="{{ asset('bundles/armdcms/tree/tree.css') }}" type="text/css" media="all" />
{% endblock %}

{% block actions %}
    <li>{% include 'SonataAdminBundle:Core:create_button.html.twig' %}</li>
{% endblock %}

{% block list_table %}

    <form class="select_form clearfix" action="">
        <label for="select_site">{{ 'label_select_site'|trans }}</label>
        <select name="select_site" id="select_site" onchange="this.form.submit();" class="uniform">
            {% for site in sites %}
                {% if siteId is defined and site.getId() == siteId %}
                    <option selected value="{{ site.getId() }}">{{ site.getTitle() }}</option>
                {% else %}
                    <option value="{{ site.getId() }}">{{ site.getTitle() }}</option>
                {% endif %}
            {% endfor %}
        </select>
        <script>
            $(document).ready(function() { $("#select_site").select2(); });
        </script>
    </form>
    <ul class="tree-actions" id="tree-actions">
        <li>
            <span id="selectAll">Выбрать все</span>
        </li>
        <li  class="to-open">
            <span id="treeActions">Действие</span>
            <ul>
                <li class="ta-delete">
                    <a href="#">Удалить</a>
                </li>
            </ul>
        </li>
    </ul>

    <table width="100%">
        <tr valign="top">
            <td width="70%" style="border: none; padding: 0 15px 0 0;">
                <div id="tree"></div>
            </td>
            <td width="30%" style="padding:5px 0 0 0;border:none;">
<div class="span10"><div class="span10-statika">
                            <div class="span10-statika-header">
                                <div class="span10-statika-header-img"></div>
                                <h1>Легенда</h1>
                                <div class="span10-statika-header-close"></div>
                            </div>
                            <div id="" class="cms-block cms-block-element">

							<dl class='list-legend'>
								<dt><img src="{{ asset('bundles/armdcms/tree/img/bt-tree-add.png') }}" alt="" /></dt>
								<dd>Добавить</dd>
								<dt><img src="{{ asset('bundles/armdcms/tree/img/bt-tree-3.png') }}" alt="" /></dt>
								<dd>Копировать</dd>
								<dt><img src="{{ asset('bundles/armdcms/tree/img/bt-tree-4.png') }}" alt="" /></dt>
								<dd>Редактировать</dd>
								<dt><img src="{{ asset('bundles/armdcms/tree/img/bt-tree-5.png') }}" alt="" /></dt>
								<dd>Удалить</dd>
							</dl>

							</div>
</div><div style="clear:both"></div></div>
            </td>
        </tr>
    </table>
{% endblock %}
