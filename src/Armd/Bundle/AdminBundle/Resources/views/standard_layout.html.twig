{% set _preview      = block('preview') %}
{% set _form         = block('form') %}
{% set _show         = block('show') %}
{% set _list_table   = block('list_table') %}
{% set _list_filters = block('list_filters') %}
{% set _side_menu    = block('side_menu') %}
{% set _content      = block('content') %}
{% set _title        = block('title') %}
{% set _breadcrumb   = block('breadcrumb') %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/bootstrap/css/bootstrap.min.css') }}" type="text/css" media="all" >

        <!-- base application asset -->
        <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/layout.css') }}" type="text/css" media="all">
        <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/css/colors.css') }}" type="text/css" media="all">
        <link href="{{ asset('bundles/armdadmin/assets/css/bootstrap.css') }}" rel="stylesheet"/>
        <link href="{{ asset('bundles/armdadmin/assets/css/bootstrap-responsive.css') }}" rel="stylesheet"/>
        <link href="{{ asset('bundles/armdadmin/css/ui-lightness/jquery-ui-1.8.18.custom.css') }}" rel="stylesheet" type="text/css" >
        <link href="{{ asset('bundles/armdadmin/css/header.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/armdadmin/css/style.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/armdadmin/css/tabs.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/armdadmin/css/table.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ asset('bundles/armdadmin/js/libs/dynatree/skin/ui.dynatree.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/armdadmin/select2/select2.css') }}" rel="stylesheet" />
        <link href="{{ asset('vendors/uploadify/uploadify.css') }}" rel="stylesheet" />
        <link href="{{ asset('vendors/jcrop/css/jquery.Jcrop.css') }}" rel="stylesheet" />
    {% endblock %}

    {% block javascripts %}
        <script src="{{ defaults.common }}/assets/js/jquery.js"></script>
        <script src="{{ asset('bundles/sonatajquery/jquery-ui-1.8.23.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonatajquery/jquery-ui-i18n.js') }}" type="text/javascript"></script>
        <!--<script src="{{ asset('bundles/sonataadmin/bootstrap/js/bootstrap-twipsy.js') }}" type="text/javascript"></script>-->
        <script src="{{ asset('bundles/sonataadmin/bootstrap/js/bootstrap.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/qtip/jquery.qtip-1.0.0-rc3.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/sonataadmin/jquery/jquery.form.js') }}" type="text/javascript"></script>
        <script src="{{ defaults.common }}/js/base.js"></script>
        <script src="{{ defaults.common }}/js/selectFormType.js"></script>

        <script src="{{ defaults.common }}/js/plugins.js"></script>
        <script src="{{ defaults.common }}/js/script.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-transition.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-alert.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-modal.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-dropdown.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-scrollspy.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-tab.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-tooltip.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-popover.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-button.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-collapse.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-carousel.js"></script>
        <script src="{{ defaults.common }}/assets/js/bootstrap-typeahead.js"></script>
		<script src="{{ asset('bundles/armdadmin/js/libs/dynatree/jquery.dynatree.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/armdadmin/select2/select2.js') }}"></script>
        <script src="{{ asset('vendors/uploadify/jquery.uploadify.min.js') }}"></script>
        <script src="{{ asset('vendors/jcrop/js/jquery.Jcrop.js') }}"></script>
    {% endblock %}

    <title>
        {% trans from 'SonataAdminBundle' %}Admin{% endtrans %}

        {% if _title is not empty %}
            {{ _title|raw }}
        {% else %}
            {% if action is defined %}
                -
                {% for menu in admin.breadcrumbs(action) %}
                    {% if not loop.first  %}
                        &gt;
                    {% endif %}
                    {{ menu.label }}
                {% endfor %}
            {% endif %}
        {% endif%}
    </title>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>
<body class="sonata-bc">

    {% import defaults.macros ~ '/header.html.twig' as header %}

    <div class="header">
        <div class="header-wrap clearfix">

            <script type="text/javascript">
                $(function(){
                    $('.dropdown-toggle').click(function(){
                        $(this).closest('.dropdown').toggleClass('open');
                        return false;
                    });
                });
            </script>


                {{ header.logo() }}
 
                {% if admin_pool is defined %}

                    {% if app.user %}
                        {#{{ header.item({'title': 'Главная',         'class': 'main',       'route': 'sonata_admin_dashboard'}) }}#}
                        {{ header.item({'title': 'Модули',          'class': 'modules',    'route': 'sonata_admin_dashboard_group', 'group': 'module'}, false, admin_pool.dashboardgroups) }}
                        {{ header.item({'title': 'Структура',       'class': 'structure',  'route': 'sonata_admin_dashboard_group', 'group': 'structure'}, false, admin_pool.dashboardgroups) }}
                        {{ header.item({'title': 'Пользователи',    'class': 'users',      'route': 'sonata_admin_dashboard_group', 'group': 'sonata_user'}, false, admin_pool.dashboardgroups) }}
                        {#{{ header.item({'title': 'Репозиторий',     'class': 'repository', 'route': 'armd_admin_dashboard_repository'}) }}#}
                        {{ header.item({'title': 'Статистика',      'class': 'statistics', 'route': 'armd_admin_dashboard_statistics'}) }}
                        {{ header.item({'title': 'Журнал',          'class': 'log',        'route': 'admin_armd_contentabstract_contentlog_list'}) }}
                        {{ render(controller('ArmdAdminBundle:Cache:Button', { 'env': 'prod', 'debug': false })) }}
                    {% endif %}
                {% endif %}

                {{ header.lang() }}
        </div>
		{% if admin_pool is defined %}
		<div class="header-profile">
			{% include admin_pool.getTemplate('user_block') %}
		</div>
		{% endif %}
    </div>
    
    <div class="bread">
        {% if _breadcrumb is not empty or action is defined %}
            <table class="bread-wrap">
                <tr>
                    {% if _breadcrumb is empty %}
                        {% if action is defined %}
                            {% for menu in admin.breadcrumbs(action) %}
                                {% if not loop.last  %}
                                    <td>
                                        <a href="{{ menu.uri }}">{{ menu.label }}</a>
                                    </td>
                                    <td>
                                        <div class="bread-arrow"></div>
                                    </td>
                                {% else %}
                                    <td>
                                        <span class="bread-last" href="{{ menu.uri }}">{{ menu.label }}</span>
                                    </td>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% else %}
                        {{ _breadcrumb|raw }}
                    {% endif %}
                </tr>
            </table>
        {% endif %}
    </div>
    
    <div class="body">
        <div class="row-fluid">
            {% block notice %}
                {% for notice_level in ['success','error','info', 'warning'] %}
                    {% set session_var = 'sonata_flash_' ~ notice_level %}
                    {% for flash in app.session.flashbag.get(session_var) %}
                        <div class="alert {{ 'alert-' ~ notice_level }}">
                            {{ flash|trans([], 'SonataAdminBundle') }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

            {% if _title is not empty or action is defined %}
                <div class="page-header">
                    <h1>
                        {% if _title is not empty %}
                            {{ _title|raw }}
                        {% elseif action is defined %}
                            {% for menu in admin.breadcrumbs(action) %}
                                {% if loop.last  %}
                                    {{ menu.label }}
                                {% endif %}
                            {% endfor %}
                        {% endif%}
                    </h1>
                    {% block favorites %}{%endblock%}
                </div>
            {% endif%}

            <div class="top-menu-action">
                {%block actions %}{% endblock %}
            </div>
            {% if _side_menu is not empty %}
                <div class="sidebar">
                    <div class="well sonata-ba-side-menu">{{ _side_menu|raw }}</div>
                </div>
            {% endif %}

            <div class="content">

                {% if _preview is not empty %}
                    <div class="sonata-ba-preview">{{ _preview|raw }}</div>
                {% endif %}


                {% if _content is not empty %}
                    <div class="sonata-ba-content">{{ _content|raw }}</div>
                {% endif %}

                {% if _show is not empty %}
                    <div class="sonata-ba-show">{{ _show|raw }}</div>
                {% endif %}

                {% if _form is not empty %}
                    <div class="sonata-ba-form">{{ _form|raw }}</div>
                {% endif %}

                {% if _list_table is not empty or _list_filters is not empty %}
                    <div class="sonata-ba-filter">
                        {{ _list_filters|raw }}
                    </div>
                    <div class="sonata-ba-list">
                        {{ _list_table|raw }}
                    </div>
                {% endif %}

                {% block footer %}
                {% endblock %}
            </div>

        </div>
    </div>

</body>
</html>

