<h1>News list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entities, 'Id', 't.id') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Name', 't.title') }}</th>
            <th>Announce</th>
            <th>Author</th>
            <th>Enabled</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ cmsPath({'id' : entity.id}, '', 'listitem', 'armd_news') }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.announce }}</td>
            <td>{{ entity.date|date("d.m.Y") }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ cmsPath({'id' : entity.id}, '', 'listitem', 'armd_news') }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>