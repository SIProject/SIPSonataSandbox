{% block show_sonata_image_widget %}
    {% spaceless %}
        {% thumbnail value, 'admin' with {'width': 75} %}
    {% endspaceless %}
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <span class="when_no">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}