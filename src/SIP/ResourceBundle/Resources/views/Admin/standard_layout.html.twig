{% extends "SonataAdminBundle::standard_layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/sipresource/js/custom.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/armdcms/css/table.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/armdcms/css/tabs.css') }}" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="{{ asset('vendors/uploadify/uploadify.css') }}" />

    <link rel="stylesheet" href="{{ asset('bundles/sipresource/css/main.css') }}" media="all">
{% endblock %}

{% block side_bar_after_nav %}
{% endblock %}

{% block sonata_page_content_nav %}
    {% if _tab_menu is not empty or _actions is not empty %}
        <nav class="navbar navbar-default" role="navigation">
            {% if _navbar_title is not empty %}
                <div class="navbar-header">
                    <span class="navbar-brand">{{ _navbar_title|raw }}</span>
                </div>
            {% endif %}
            <div class="container-fluid">
                <div class="navbar-left">
                    {% if _tab_menu is not empty %}
                        {{ _tab_menu|raw }}
                    {% endif %}
                </div>

                {% if _actions is not empty %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown sonata-actions">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Actions'|trans }} <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu">
                                {{ _actions|raw }}
                            </ul>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </nav>
    {% endif %}
{% endblock sonata_page_content_nav %}